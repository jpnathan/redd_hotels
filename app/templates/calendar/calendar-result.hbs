<h5 class="result-hotels-title">Best choice between {{model.params.s}} and {{model.params.e}}</h5>

<div class="col l12 s12 result-hotels">
  <aside class="result-filters">
    <div class="col l6 s12">
      <h6 class="filters">Filters</h6>
      <small class="filter-subtitle">Price Range per <b> night </b></small>
      <div>
        {{range-slider}}
      </div>
      <div class="range-labels">
        <div>
          <p class="range-subtitle">Min</p>
          <span class="range-values">$100</span>
        </div>
        <div class="right-values">
          <p class="range-subtitle">Max</p>
          <span class="range-values">$600</span>
        </div>
      </div>
    </div>
    <div class="divider" style="margin-top: 2em;"></div>
    <div>
      <p class="range-subtitle">Stars</p>      
      <form action="#">
        <p>
          <label>
            <input id="one-star" type="checkbox" checked={{oneStar}} onchange={{action 'toggleOneStar'}}/>
            <span> <img src="../../../images/one-star.svg" alt=""></span>
          </label>
        </p>
        <p>
          <label>
            <input id="two-star" type="checkbox" checked={{twoStar}} onchange={{action 'toggleTwoStar'}}/>
            <span> <img src="../../../images/two-star.svg" alt=""></span>
          </label>
        </p>
        <p>
          <label>
            <input id="three-star" type="checkbox" checked={{threeStar}} onchange={{action 'toggleThreeStar'}}/>
            <span> <img src="../../../images/three-star.svg" alt=""></span>
          </label>
        </p>
        <p>
          <label>
            <input id="four-star" type="checkbox" checked={{fourStar}} onchange={{action 'toggleFourStar'}}/>
            <span> <img src="../../../images/four-star.svg" alt=""></span>
          </label>
        </p>
        <p>
          <label>
            <input id="five-star" type="checkbox" checked={{fiveStar}} onchange={{action 'toggleFiveStar'}}/>
            <span> <img src="../../../images/five-star.svg" alt=""></span>
          </label>
        </p>
      </form>
    </div>
  </aside>

  <div class="col l12 s12 result-hotels-card">
    {{#each filteredHotels as |hotel|}}
      <div class="card horizontal">
        <div class="card-image col l4 s12 m7">
          <img src={{hotel.image}} alt="Fachada Hotel">
        </div>
        <div class="card-content card-price col l6">
          <span> {{star-rating hotel.rate readOnly=true fillColor='#F9B349' width=12 heigh=12}} </span>
          <p class="hotel-title">{{hotel.name}}</p>
          <p class="hotel-description">{{hotel.description}}</p>
          <button class="btn waves-effect waves-light" type="submit" name="action">Book now</button>
          <button class="btn waves-effect waves-light button" type="submit" name="action">Price history</button>
        </div>
        <div class="card-action col l3 s12">
          <p class="total-nights">Total <b> {{hotel.totalNights}} nights</b></p>
          <p class="total-price">${{hotel.totalPrice}}</p>
          <p class="per-night">Per night</p>
          <p class="price-night">${{hotel.price}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>


{{outlet}}